                                params.page = params.page || 1;
                                $('#loaderModel').modal('hide');
                                return {
                                    results: data.data,
                                    pagination: {
                                        more: (params.page * 7) < data.totalCount
                                    }
                                };
                            }
                        }
                    });

                });
            });
